<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:theme="@android:style/Theme.Material.Light"
    card_view:cardCornerRadius="2dp"
    card_view:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/absoluteWhite">

        <TextView
            android:id="@+id/card_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/card_menu"
            android:background="@drawable/dots_vertical"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_header"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_content"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/card_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/card_content"
            android:paddingRight="16dp"
            android:textSize="14sp"
            android:paddingBottom="8dp"
            android:clickable="true"/>

        <View
            android:id="@+id/card_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/card_date"/>

        <CheckBox
            android:id="@+id/card_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_divider"
            android:paddingTop="8dp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"
            android:text="@string/card_checkbox"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>